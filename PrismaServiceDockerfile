FROM node:10

WORKDIR /usr/src

COPY src/package.json .
COPY src/yarn.lock .
COPY prisma.yml .
COPY seed.graphql .
COPY datamodel.graphql .
COPY .env .
COPY wait-for-it.sh .

RUN yarn global add concurrently
RUN yarn global add prisma
RUN chmod +x ./wait-for-it.sh
RUN yarn install

COPY src/service/ ./service/

EXPOSE 4000
